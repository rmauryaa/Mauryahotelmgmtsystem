@inject SignInManager<User> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HotelManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/service.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HotelManagementSystem.styles.css" asp-append-version="true" />
    <link href="HotelManagementSystem.styles.css" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DynaPuff&family=Ubuntu:ital,wght@1,300&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=DynaPuff&family=Exo+2:wght@500&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.7.1/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

<body>
    <header class="nav">
        <nav class="navbar navbar-expand-lg navbar-dark bg-black navbar-fixed" style="height : 80px">

            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'DynaPuff', cursive; font-size:x-large">Maurya Hotel</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor02">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="About">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="Services">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="font-family: 'Exo 2', sans-serif; font-size:larger" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @if (signInManager.IsSignedIn(User))
                        {
                            <div class="mx-2 my-2 text-info">@User.Identity.Name</div>
                            <li class="nav-item">
                                <form method="post" asp-action="logout" asp-controller="Account" style="display:inline-block">
                                    <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-danger my-2 my-sm-0 mx-2">Sign Out</button>
                                </form>
                            </li>
                            
                        }
                        else
                        {
@*
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Log In
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <form method="get" asp-action="AdminLogin" asp-controller="Account" style="display:inline-block">
                                        <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-light btn-sm my-2 my-sm-0 mx-2">LogIn As Admin</button>
                                    </form>

                                    <form method="get" asp-action="UserLogin" asp-controller="Account" style="display:inline-block">
                                        <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-light btn-sm my-2 my-sm-0 mx-2">LogIn As User</button>
                                    </form>
                                </div>
                            </li>
                            <form method="get" asp-action="SignUp" asp-controller="Account" style="display:inline-block">
                                <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-danger" my-2 my-sm-0 mx-2">Sign Up</button>
                            </form>*@
                            <li class="nav-item">
                                <form method="get" asp-action="AdminLogin" asp-controller="Account" style="display:inline-block">
                                    @*<button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">LogIn as User</button>*@
                                    <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-light btn-sm my-2 my-sm-0 mx-2">LogIn As Admin</button>
                                </form>
                                 <form method="get" asp-action="UserLogin" asp-controller="Account" style="display:inline-block">
                                    @*<button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">LogIn as Admin</button>*@
                                    <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-light btn-sm my-2 my-sm-0 mx-2">LogIn As User</button>
                                </form>
                                <form method="get" asp-action="SignUp" asp-controller="Account" style="display:inline-block">
                                    <button style="font-family: 'Exo 2', sans-serif;" class="btn btn-secondary my-2 my-sm-0 mx-2">Sign Up</button>
                                </form>

                            </li>


                        }
                    </ul>
                </div>
            </div>

        </nav>
    </header>
    <main>
        @RenderBody()
    </main>

@*    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - HotelManagementSystem - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>*@


    <div class="row copyright">
        <div class="footer-menu">

            <a href="#">Home</a>
            <a href="#">F.A.Q</a>
            <a href="#">Cookies Policy</a>
            <a href="#">Terms Of Service</a>
            <a href="#">Support</a>

        </div>
        <p>Copyright &copy; 2023</p>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
